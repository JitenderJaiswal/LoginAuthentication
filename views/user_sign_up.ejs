<html>
  <head>
    <link rel="stylesheet" href="/css/user_sign_up.css">
  </head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header"><h3>Sign Up</h3></div>
                <div class="card-body"><form action="/users/create" method="POST">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" name="name"placeholder="Your name" required>
                        
                    </div>
                                      <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" name="email"placeholder="Your Email" required>
                            
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required>
                        </div>
                        <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="6Lfwmr8ZAAAAAAEqxCuxx8ol9eAjxsnNvDJbSqFG"></div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="SignUp" class="btn login_btn">
                        </div>
                        <div class="form-group">
                        <a href="/users/auth/google"><input type="submit" value="Google Sign In/Sign Up" class="btn login_btn btn-default btn-block"></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
